<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgrounScreen">
    <TextView
        android:id="@+id/headingSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Sign Up"
        android:textSize="@dimen/_34ssp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textFontWeight="500"
        app:layout_constraintVertical_bias="0.1"
        />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headingSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Please enter your contact number so we can send you a verification code."
        android:textFontWeight="500"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/backgroundColor"
        />
    <EditText
        android:id="@+id/phoneNumberField"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/edittext_background"
        android:hint="Phone Number"
        android:textColorHint="@color/hint_Text_Color"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/_12ssp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/_43sdp"
        app:layout_constraintTop_toBottomOf="@id/phoneNumberField"
        app:layout_constraintStart_toStartOf="@id/phoneNumberField"
        app:layout_constraintEnd_toEndOf="@id/phoneNumberField"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/rounded"
        app:backgroundTint="@color/musterd"
        android:textColor="@color/white"
        android:text="Get OTP"
        android:fontFamily="@font/poppins_medium"
        android:textFontWeight="600"
        android:textSize="@dimen/_18ssp"
        android:textAllCaps="false"
        />
</androidx.constraintlayout.widget.ConstraintLayout>